{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "astelware/multi-docker-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "astelware/multi-docker-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "astelware/multi-docker-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "astelware/multi-docker-nginx",
      "hostname": "client",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }  
      ],
      "links": ["client", "server"]      
    }
  ]
}